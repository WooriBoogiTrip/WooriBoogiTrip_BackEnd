<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.BoardDao">

    <insert id="writeArticle" parameterType="com.ssafy.board.model.BoardDto">
        INSERT INTO board (articleNo, userId, subject, content, hit)
        VALUES (#{articleNo}, #{userId}, #{subject}, #{content}, #{hit})
    </insert>

    <select id="listArticle" parameterType="map" resultType="com.ssafy.board.model.BoardDto">
        SELECT * FROM board
    </select>

    <select id="getTotalArticleCount" parameterType="map" resultType="int">
        SELECT COUNT(*) FROM board
    </select>

    <select id="getArticle" parameterType="int" resultType="com.ssafy.board.model.BoardDto">
        SELECT * FROM board WHERE boardNo = #{boardNo}
    </select>

    <update id="updateHit" parameterType="int">
        UPDATE board SET hit = hit + 1 WHERE boardNo = #{boardNo}
    </update>

    <update id="modifyArticle" parameterType="com.ssafy.board.model.BoardDto">
        UPDATE board 
        SET subject = #{subject}, content = #{content}
        WHERE noticeNo = #{boardNo}
    </update>

    <delete id="deleteArticle" parameterType="int">
        DELETE FROM board WHERE noticeNo = #{boardNo}
    </delete>

</mapper>
